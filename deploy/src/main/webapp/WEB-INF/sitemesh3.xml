<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <mapping path="/" decorator="/WEB-INF/decorator/none.jsp"/>
    <mapping path="/index.jsp" decorator="/WEB-INF/decorator/none.jsp"/>
    <mapping path="/index.html" decorator="/WEB-INF/decorator/none.jsp"/>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    <mapping path="/*" decorator="/WEB-INF/decorator/default.jsp"/>

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/static/*" exclue="true"/>
    <mapping path="/h2/*" exclue="true"/>
    <mapping path="/javasimon/*" exclue="true"/>
    <mapping path="/druid/*" exclue="true"/>
    <mapping path="/swagger*" exclue="true"/>
</sitemesh>